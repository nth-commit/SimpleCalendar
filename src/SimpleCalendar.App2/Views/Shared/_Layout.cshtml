@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment HostingEnvironment
@inject IEnvironmentSettingsFactory EnvironmentSettingsFactory
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleCalendar.App2</title>
    <base href="~/" />

    @*<link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
</head>
<body>
    @RenderBody()

    <script src="~/dist/vendor.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var SIMPLE_CALENDAR_ENVIRONMENT = '@HostingEnvironment.EnvironmentName.ToLower()';
        var SIMPLE_CALENDAR_CONFIGURATION = '@Html.Raw(EnvironmentSettingsFactory.CreateJson())';
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
